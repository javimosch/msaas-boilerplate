# ===================================================================
# MSaaS Frontend - Environment Variables Configuration
# ===================================================================
# Copy this file to .env and fill in your actual values
# ===================================================================

# ===================================================================
# API CONFIGURATION
# ===================================================================
# Backend API base URL
VUE_APP_API_URL=http://localhost:3000

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
# Application name displayed in UI
VUE_APP_NAME=MSaaS App

# Application version
VUE_APP_VERSION=1.0.0

# Enable debug mode (shows console.debug messages)
VUE_APP_DEBUG=true

# ===================================================================
# FEATURE FLAGS
# ===================================================================
# Enable analytics tracking
VUE_APP_ANALYTICS=false

# Enable beta features
VUE_APP_BETA_FEATURES=false

# ===================================================================
# STRIPE CONFIGURATION (for payments)
# ===================================================================
# Stripe publishable key (starts with pk_)
VUE_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Enable Stripe test mode
VUE_APP_STRIPE_TEST_MODE=true

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Development server port (optional, defaults to 3001)
# PORT=3001

# Enable source maps in development
# GENERATE_SOURCEMAP=true
